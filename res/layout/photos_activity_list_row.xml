<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLay_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linearLay_main" >

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
             />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_child"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12.5dp"
        android:layout_toRightOf="@+id/relmain"
        android:gravity="left" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgView"
            android:text="Id"
            android:textColor="@color/parot_green" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imgView"
            android:text="Desc"
            android:textColor="@color/parot_green" />

        <TextView
            android:id="@+id/desi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_toRightOf="@+id/imgView"
            android:text="Desc"
            android:textColor="@color/parot_green" />

        <ImageView
            android:id="@+id/photo_activity_list_row_imgView_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/small_arrow_right" />
    </RelativeLayout>

</RelativeLayout>